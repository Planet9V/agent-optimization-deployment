# ═══════════════════════════════════════════════════════════════
# Neo4j Connection Configuration
# Copy to .env and update with actual credentials
# ═══════════════════════════════════════════════════════════════

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here

# NVD API Configuration (optional, increases rate limit from 5 req/30s to 50 req/30s)
# Register at: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=your_nvd_api_key_here

# OpenSPG Configuration (for Phase 6)
OPENSPG_URI=http://localhost:8887
OPENSPG_PROJECT=cybersecurity_digital_twin

# Customer Namespace Configuration
DEFAULT_CUSTOMER_NAMESPACE=customer:default
INDUSTRY_REFERENCE_NAMESPACE=shared:industry

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/cybersec-kg/ingestion.log
