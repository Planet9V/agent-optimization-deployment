# AEON UI - Environment Variables Template
# Copy this file to .env.local for development
# DO NOT commit .env.local to version control

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=AEON UI
TZ=Asia/Shanghai
PORT=3000

# ============================================
# Neo4j Configuration (Graph Database)
# ============================================
# For development: bolt://localhost:7687
# For production: bolt://openspg-neo4j:7687
NEO4J_URI=bolt://openspg-neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j@openspg
NEO4J_DATABASE=neo4j

# ============================================
# Qdrant Configuration (Vector Database)
# ============================================
# For development: http://localhost:6333
# For production: http://openspg-qdrant:6333
QDRANT_URL=http://openspg-qdrant:6333
QDRANT_API_KEY=deqUCd5v5tL3NNTlcY3tXuPX+9vNZ7P1NMt/WlBUOZQ=

# ============================================
# MySQL Configuration (Relational Database)
# ============================================
# For development: localhost
# For production: openspg-mysql
MYSQL_HOST=openspg-mysql
MYSQL_PORT=3306
MYSQL_DATABASE=openspg
MYSQL_USER=root
MYSQL_PASSWORD=openspg

# ============================================
# MinIO Configuration (Object Storage)
# ============================================
# For development: http://localhost:9000
# For production: http://openspg-minio:9000
MINIO_ENDPOINT=http://openspg-minio:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio@openspg
MINIO_USE_SSL=false

# ============================================
# OpenSPG Server Configuration
# ============================================
# For development: http://localhost:8887
# For production: http://openspg-server:8887
OPENSPG_SERVER_URL=http://openspg-server:8887

# ============================================
# NextAuth Configuration
# ============================================
# Generate secret: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-me-in-production

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
DEBUG=false
