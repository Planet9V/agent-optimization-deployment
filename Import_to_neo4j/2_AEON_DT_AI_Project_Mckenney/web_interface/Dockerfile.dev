# AEON SaaS Development Dockerfile
# Optimized for hot reload and rapid development iteration

FROM node:20-alpine AS base

# Install dependencies for building native modules
RUN apk add --no-cache \
    libc6-compat \
    python3 \
    make \
    g++

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install all dependencies (including dev dependencies)
# React 19: Use --legacy-peer-deps for @tremor/react (requires React 18)
# react-leaflet 5.0.0 peer dependency now satisfied with React 19
RUN npm install --legacy-peer-deps

# Copy application source
COPY . .

# Expose Next.js development port
EXPOSE 3000

# Set environment to development
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1

# Start development server with hot reload
CMD ["npm", "run", "dev"]
