# =============================================================================
# AEON CYBERSECURITY SYSTEM - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Instructions:
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values in .env
# 3. NEVER commit .env to version control
# 4. Review docs/CREDENTIALS_AND_SECRETS_GUIDE.md for details
# =============================================================================

# -----------------------------------------------------------------------------
# Neo4j Graph Database
# -----------------------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j@openspg
NEO4J_DATABASE=neo4j

# Neo4j Advanced Configuration
NEO4J_HEAP_INITIAL=4G
NEO4J_HEAP_MAX=8G
NEO4J_PAGECACHE=4G
NEO4J_TX_MAX=8G

# -----------------------------------------------------------------------------
# PostgreSQL Database (AEON SaaS)
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aeon_saas_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# PostgreSQL Connection String
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aeon_saas_dev

# -----------------------------------------------------------------------------
# MySQL Database (OpenSPG)
# -----------------------------------------------------------------------------
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=openspg
MYSQL_ROOT_PASSWORD=openspg
MYSQL_USER=root

# MySQL Connection String
MYSQL_URL=mysql://root:openspg@localhost:3306/openspg

# -----------------------------------------------------------------------------
# Qdrant Vector Database
# -----------------------------------------------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=
QDRANT_COLLECTION=aeon-actual-system

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# -----------------------------------------------------------------------------
# Redis Cache/Message Broker
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Connection String
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# MinIO Object Storage
# -----------------------------------------------------------------------------
MINIO_ENDPOINT=localhost:9000
MINIO_CONSOLE=localhost:9001
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio@openspg
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio@openspg
MINIO_USE_SSL=false

# S3-Compatible URL
S3_ENDPOINT=http://localhost:9000
AWS_ACCESS_KEY_ID=minio
AWS_SECRET_ACCESS_KEY=minio@openspg

# -----------------------------------------------------------------------------
# OpenSPG Knowledge Graph Server
# -----------------------------------------------------------------------------
OPENSPG_API_URL=http://localhost:8887
OPENSPG_API_KEY=

# -----------------------------------------------------------------------------
# NER11 Named Entity Recognition API
# -----------------------------------------------------------------------------
NER11_API_URL=http://localhost:8000
NER11_MODEL_PATH=/path/to/ner11/model
NER11_MAX_LENGTH=512

# -----------------------------------------------------------------------------
# AEON SaaS Frontend
# -----------------------------------------------------------------------------
AEON_FRONTEND_URL=http://localhost:3000
AEON_BACKEND_URL=http://localhost:8000
NODE_ENV=development

# -----------------------------------------------------------------------------
# API Keys (External Services)
# -----------------------------------------------------------------------------
# IMPORTANT: Replace these with your actual API keys
# NEVER commit actual keys to version control
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
HUGGINGFACE_API_KEY=your_huggingface_key_here

# -----------------------------------------------------------------------------
# Application Security
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
SECRET_KEY=your_secret_key_for_jwt_signing
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=86400

# -----------------------------------------------------------------------------
# Logging and Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Docker Configuration
# -----------------------------------------------------------------------------
DOCKER_NETWORK=aeon-network
COMPOSE_PROJECT_NAME=aeon-system

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
DEBUG=true
TESTING=false
ENVIRONMENT=development

# Feature Flags
ENABLE_API_DOCS=true
ENABLE_SWAGGER=true
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
